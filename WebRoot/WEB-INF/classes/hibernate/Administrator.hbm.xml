<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="com.xyz.model.Administrator" table="administrator">
	
		<id name="id" column="id" type="int">
			<generator class="increment">
			</generator>
		</id>
		
		<property name="adminEmail" column="adminEmail" type="string"></property>
		<property name="password" column="password" type="string"></property>
		<property name="activated" column="activated" type="int"></property>
		<property name="activationCode" column="activationCode" type="string"></property>
		
		<one-to-one name="department" class="com.xyz.model.Department"></one-to-one>	

	</class>

</hibernate-mapping>